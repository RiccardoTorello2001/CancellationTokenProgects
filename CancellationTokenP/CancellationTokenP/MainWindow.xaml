        <Label x:Name="Lbl_op1" Content="" HorizontalAlignment="Left" Margin="75,128,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="Lbl_op2" Content="" HorizontalAlignment="Left" Margin="222,128,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="Lbl_op3" Content="" HorizontalAlignment="Left" Margin="376,128,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txt_ritardo_op3" HorizontalAlignment="Left" Height="23" Margin="376,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txt_count1" HorizontalAlignment="Left" Height="23" Margin="222,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="txt_count_op3" HorizontalAlignment="Left" Height="23" Margin="376,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="Btn_stop1" Content="stop1" HorizontalAlignment="Left" Margin="75,267,0,0" VerticalAlignment="Top" Width="75" Click="Btn_stop1_Click"/>
        <Button x:Name="Btn_stop_ultimidue" Content="stop ultimi due" HorizontalAlignment="Left" Margin="210,267,0,0" VerticalAlignment="Top" Width="100" Click="Btn_stop_ultimidue_Click"/>
        <Button x:Name="Btn_stop_tutti" Content="stop tutti" HorizontalAlignment="Left" Margin="376,267,0,0" VerticalAlignment="Top" Width="75" Click="Btn_stop_tutti_Click"/>

    </Grid>
</Window>
